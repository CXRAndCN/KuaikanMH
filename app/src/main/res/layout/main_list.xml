<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/listviewbk"
    >




    <com.example.administrator.kuaikanmh.ImageViewWithWidth
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listviewbk"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="233333"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#ffb6b3bb"
            android:text="344444" />

        <ImageView
            android:id="@+id/image_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_praise"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/title_author"
            android:src="@drawable/ic_home_praise_pressed" />

        <TextView
            android:id="@+id/txt_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/comment"
            android:layout_alignBottom="@+id/image_praise"
            android:layout_marginRight="10dp"
            android:textColor="#ffb6b3bb"
            android:text="111" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_comment"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/title_author"
            android:src="@drawable/ic_home_comment_pressed" />

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/comment"
            android:layout_marginRight="30dp"
            android:textColor="#ffb6b3bb"

            android:text="111" />
    </RelativeLayout>
</LinearLayout>